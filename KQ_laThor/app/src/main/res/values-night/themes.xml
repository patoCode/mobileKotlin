<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="colorPrimaryVariant">@color/color_primaryDark</item>
        <item name="colorPrimary">@color/color_primaryDark</item>
        <item name="colorPrimaryDark">@color/color_primaryDark</item>
        <item name="android:statusBarColor">@color/color_primaryDark</item>
        <item name="colorSecondary">@color/color_secondaryDark</item>
        <item name="colorAccent">@color/color_accentDark</item>
        <item name="colorSurface">@color/color_surfaceDark</item>
    </style>
    <style name="OperatorKey" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="android:textColor">@color/color_primaryDark</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textSize">20sp</item>
        <item name="android:padding">15dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:elevation">0dp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_margin">2dp</item>
        <item name="strokeWidth">0dp</item>
    </style>
    <style name="EraseKey" parent="AppTheme">
        <item name="android:padding">15dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:background">@color/color_primaryDark</item>
    </style>
    <style name="NumericKey" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="android:textColor">@color/color_accentDark</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textSize">20sp</item>
        <item name="android:padding">15dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:backgroundTint">@color/color_surfaceDark</item>
        <item name="android:elevation">0dp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_margin">2dp</item>
        <item name="strokeColor">#31A4A4A4</item>
        <item name="strokeWidth">0dp</item>
        <item name="android:clickable">true</item>
    </style>
    <style name="EqualsKey" parent="AppTheme">
        <item name="android:textSize">20sp</item>
        <item name="android:padding">15dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:background">@drawable/bg_big_key_dark</item>
    </style>
    <style name="MainBg" parent="AppTheme">
        <item name="android:background">@color/color_surfaceDark</item>
    </style>
    <style name="ScreenBg" parent="AppTheme">
        <item name="android:background">@color/color_primaryDark</item>
    </style>
    <style name="ColorKey" parent="AppTheme">
        <item name="android:fontFamily">@font/kanit_regular</item>
        <item name="android:textColor">@color/color_accentDark</item>
    </style>
</resources>