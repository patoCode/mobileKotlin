<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:paddingHorizontal="50dp"
    style="@style/AppTheme.Style01"
    tools:context=".MainActivity"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginBottom="10dp"
        android:gravity="center"
        android:layout_marginVertical="20dp"
        >

        <Switch
            android:id="@+id/swTheme"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Activate Dark Mode"
            />
        <ImageView
            android:id="@+id/ivMode"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/app_icon_c_moon"
            />

        <androidx.appcompat.widget.SwitchCompat
            android:id="@+id/swcTheme"
            android:layout_marginVertical="50dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:thumb="@drawable/options"
            app:track="@drawable/option_track"
            />


    </LinearLayout>

</LinearLayout>